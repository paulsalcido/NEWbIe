def number_to_name(number):
    
    if number == 1:
        return "Rock"
    elif number == 2:
        return "Spock"
    elif number == 3:
        return "Lizard"
    elif number == 4:
        return "Scissors"
    elif number == 5:
        return "Paper"
    else:
        # Once again see the above notes.
        # The code should die.
        # Read about dict (dictionaries)
        return "YA FOOL!"
    
